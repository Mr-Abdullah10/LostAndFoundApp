<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:layout_margin="8dp">

        <!-- Image Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/baseline_add_24"
            android:scaleType="fitCenter" />

        <!-- Post Type Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Type"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerPostType"
            android:text="Lost Item or Found Item"
            android:textColor="@color/black"
            android:paddingBottom="8dp" />


        <!-- Post Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Date"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postDate"
            android:text="2024-12-10"
            android:textColor="@color/black"
            android:paddingBottom="8dp" />

        <!-- Item -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/categoryinput"
            android:text="Smart Watch"
            android:textColor="@color/black"
            android:paddingBottom="8dp" />

        <!-- Item Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Description"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptioninput"
            android:text="Fragile, Handle with care"
            android:textColor="@color/black"
            android:paddingBottom="8dp" />

        <!-- Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressinput"
            android:text="123 Street Name, City, Country"
            android:textColor="@color/black"
            android:paddingBottom="8dp" />

        <!-- User Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Information"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameinput"
            android:text="John Doe"
            android:textColor="@color/black"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text="johndoe@example.com"
            android:textColor="@color/black"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contactinput"
            android:text="+123456789"
            android:textColor="@color/black"
            android:paddingBottom="8dp" />

        <!-- Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:text="Pending"
            android:textColor="@color/black"
            android:paddingBottom="8dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/claim_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim Item" />

        <Button
            android:id="@+id/return_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Item" />

        <Button
            android:id="@+id/confirm_item_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Item Received" />
    </LinearLayout>
</ScrollView>
